-#  This file is app/views/verifier/show.html.haml
%header
  %h1(class="checkerTitle")
    Verify Proof

%body
  = form_tag verify_path, method: "get" do
    %table
      %tr(class="labels")
        %td
          = label_tag :premise, "Premise"
        %td
        %td
          = label_tag :conclusion, "Conclusion"
      %tr
        %td
          = text_field_tag :premise, @premise_prefill
        %td(class="mid") ‚ä¢
        %td
          = text_field_tag :conclusion, @conclusion_prefill
    = label_tag :proof, "Proof Entry:"
    %br
    = text_area_tag :proof, @proof_prefill
    %br
    = submit_tag 'Check Proof'
  %h2
    = @response
    - if @error
      %p
        = @error_message
        %br
        = @line