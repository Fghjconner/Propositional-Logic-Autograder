<div class = "quiz">
	<h1>Quiz</h1>
	<h3>Let's Begin</h3>
	<%= form_tag({}, {:method => :get}) do %>
		<ol class = "question_list">
			<% @questions.each do |question| %>
				<div class = "question_box">
					<li class = "question">
						<h4><%= question.text %></h4>
						<% if question.answer == "[:enter proof:]" %>
							<p><%= label_tag 'who[]', "Enter Proof: "%>
							<%= text_area_tag  'who[]' %></p>
							<p>
								<%= question.res_string %>
								<%if question.error %>
									<p>
										<%=question.err_message%>
										<br>
										<%=question.line_no%>
									</p>
								<%end%>
							</p>
						<% else %>
							<p><%= label_tag 'who[]', "Answer: "%>
							<%= text_field_tag  'who[]' %></p>
							<p>
								<%= question.result(question.response) %>
							</p>
						<%end%>
					</li>
				</div>
			<% end %>
		</ol>

	    <%= submit_tag 'Submit Answers'%>
    <%end%>
</div>
