<% provide(:title, 'All users') %>

<h4>Currently Logged In</h4>
<ul class="users">
    <li>
      <%= link_to current_user.name %>
      <%= current_user.last_seen %>
    </li>
</ul>


<h4>All Users: CSCE-222</h4>

  <div class="row">
    <form class="col s2">
      <label class="active" for="first_name2">Search</label>
      <input value="" name="email" type="text" class="validate">
        <button class="btn waves-effect waves-light" type="submit">Submit
          <i class="material-icons right">send</i>
        </button>
    </form>
  </div>

<ul class="users">
<div class="row">
<em><h5>Section 1</h5></em>
  <div class="col s6" style="background-color:pink;">
    <em><h6>User Information</h6></em>
    <!-- Items Column -->
    <div class="cell gradable" style="text-align:left">
      <% @users.each do |user| %>
        <li>
        <% if user.section == "1" %>     
          <%= "Move: " %>
          <a href="/user/section?id=<%=user.id%>&section=1">1</a>
          <a href="/user/section?id=<%=user.id%>&section=2">2</a>
          <a href="/user/section?id=<%=user.id%>&section=3">3</a>
          <%= "| " %>
          <%= link_to "Delete", user, :method => :delete, data: { confirm: "Are you sure?" } %>
          <%= " |" %>
          <a href="/student_profile?id=<%=user.id%>"><%=user.name%></a>
        <% end %>
        </li>
      <% end %>
    </div>
  </div>

  <div class="col s6" style="background-color:#85C1E9;">
    <em><h6>Lastest Activities</h6></em>
    <!-- Items Column -->
    <div class="cell gradable" style="text-align:left">
      <% @users.each do |user| %>
        <li>
        <% if user.section == "1" %>
          <% if user.last_seen.nil? %>
            <%= "Never logged in" %>
          <% else %>
            <%= "Last seen on: " %>
            <%= user.last_seen %>
            
            <% if user.num_attempt.nil? %>
              <%= "No attempts"%>
            <% else %>
              <%= "Number of Attemps: "%>
              <%= user.num_attempt%> 
            <%end%>

            <% if user.num_correct.nil? %>
              <%= "None complete"%>
            <% else %>
              <%= "Number completed: "%>
              <%= user.num_correct%> 
            <%end%>
            
          <% end %>
        <% end %>
        </li>
      <% end %>
    </div>
  </div>

</div>
</ul>


